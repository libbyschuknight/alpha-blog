<h1>Listing All Articles</h1>
<p>
  <%= link_to "Create new article", new_article_path, class: "btn btn-primary" %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%=article.description %></td>
    <td><%= link_to "Edit", edit_article_path(article), class: "btn btn-primary" %></td>
    <td><%= link_to "Show", article_path(article), class: "btn btn-primary" %></td>
  </tr>
  <% end %>
</table>
